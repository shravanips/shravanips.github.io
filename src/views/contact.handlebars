<section class="section contact">
  <h1 class="page-title">Get in touch</h1>

  <div class="contact-shell">
    <!-- FORM CARD -->
    <div class="contact-card">
      <form class="contact-form" method="POST" action="#">
        <div class="contact-grid">
          <div class="field">
            <label>First name <span>*</span></label>
            <input type="text" name="firstName" required />
          </div>

          <div class="field">
            <label>Last name <span>*</span></label>
            <input type="text" name="lastName" required />
          </div>

          <div class="field">
            <label>Email <span>*</span></label>
            <input type="email" name="email" required />
          </div>

          <div class="field">
            <label>Phone</label>
            <input type="tel" name="phone" />
          </div>

          <div class="field field--full">
            <label>Write a message <span>*</span></label>
            <textarea name="message" rows="6" required></textarea>
          </div>
        </div>

        <button class="contact-submit" type="submit">Submit</button>

        <p class="contact-note">
          Prefer email? You can also reach me directly below.
        </p>
      </form>
    </div>

    <!-- DIRECT REACH -->
    <div class="reach">
      <h2 class="reach-title">Reach out directly</h2>

      <div class="reach-grid">
        <a class="reach-card" href="https://www.linkedin.com/in/shravanisawant03" target="_blank" rel="noreferrer">
          <div class="reach-badge">in</div>
          <div class="reach-body">
            <div class="reach-name">LinkedIn</div>
            <div class="reach-sub">Message me on LinkedIn for roles, research, or collaborations.</div>
            <div class="reach-cta">Open profile →</div>
          </div>
        </a>

        <a class="reach-card" href="mailto:ssawant10@stevens.edu">
          <div class="reach-badge">@</div>
          <div class="reach-body">
            <div class="reach-name">Email</div>
            <div class="reach-sub">Best for detailed questions, documents, or follow-ups.</div>
            <div class="reach-cta">ssawant10@stevens.edu →</div>
            <div class="reach-cta">shravanipps03@gmail.com →</div>

          </div>
        </a>
      </div>
    </div>
  </div>
</section>
