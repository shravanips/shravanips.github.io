<section class="section section--center">
  <h1 class="page-title page-title--center">Publications</h1>

  <div class="pub-grid">
    {{#each publications}}
      <div class="flip-card pub-card" tabindex="0" role="button" aria-label="Publication: {{title}}">
        <div class="flip-card__inner">

          {{!-- FRONT --}}
          <div class="flip-face flip-face--front">
            <div class="pub-front">
              <div class="pub-top">
                <span class="pill">{{badgeText}}</span>
                <span class="pill">{{type}}</span>
                <span class="pill">{{year}}</span>
              </div>

              <h2 class="pub-title">{{title}}</h2>

              {{!-- Authors (JSON -> authors array) --}}
              {{#if authors}}
                <div class="pub-authors">
                  {{#each authors}}
                    {{#if isYou}}
                      <span class="pub-author--you">{{name}}</span>
                    {{else}}
                      <span>{{name}}</span>
                    {{/if}}
                    {{#unless @last}}, {{/unless}}
                  {{/each}}
                </div>
              {{/if}}

              <div class="pub-venue muted">{{venue}}</div>

              <div class="flip-hint">Click to view details</div>
            </div>
          </div>

          {{!-- BACK --}}
          <div class="flip-face flip-face--back">
            <div class="pub-back">
              <div class="pub-back__top">
                <div class="pub-back__title">Highlights & contribution</div>
                <div class="muted">{{type}} · {{venue}} · {{year}}</div>
              </div>

              {{!-- Contributions (JSON -> contributions) --}}
              {{#if contributions}}
                <ul class="pub-list">
                  {{#each contributions}}
                    <li>{{this}}</li>
                  {{/each}}
                </ul>
              {{/if}}

              {{!-- Keywords --}}
              {{#if keywords}}
                <div class="chip-row">
                  {{#each keywords}}
                    <span class="chip">{{this}}</span>
                  {{/each}}
                </div>
              {{/if}}

              {{!-- Links (JSON -> array of {label,url}) --}}
              {{#if links}}
                <div class="link-row">
                  {{#each links}}
                    <a class="mini-link" href="{{url}}" target="_blank" rel="noopener noreferrer">
                      {{label}} →
                    </a>
                  {{/each}}
                </div>
              {{/if}}

              <div class="flip-hint flip-hint--back">Click to go back</div>
            </div>
          </div>

        </div>
      </div>
    {{/each}}
  </div>
</section>


