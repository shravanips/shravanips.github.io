<section class="section">
  <h1 class="page-title">Experience</h1>

  {{#each experience}}
    <div class="card">
      <div class="card__title">{{role}}</div>
      <div class="card__meta">{{org}} · {{location}} · {{dates}}</div>
      <ul class="list">
        {{#each highlights}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/each}}
</section>
